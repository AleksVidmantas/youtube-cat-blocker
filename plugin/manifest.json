{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "permissions": [
    "https://www.googleapis.com/"
  ],
  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "https://www.york.ac.uk/teaching/cws/wws/webpage1.html", "http://www.littlewebhut.com/articles/simple_web_page/" ],
      "js": ["cat-blocker.js"]
    }
  ]

}